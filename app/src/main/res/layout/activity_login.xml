<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:transitionName="logo" />

        <ImageView
            android:id="@+id/iv_nam"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/iv_logo"
            android:layout_centerInParent="true"
            android:src="@drawable/name"
            android:transitionName="logo_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"
        android:text="Welcome"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/ubuntu_medium" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/tv_welcome"
            android:layout_marginStart="30dp"
            android:layout_marginTop="232dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_login"
            android:gravity="top"

            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_edit_text"
                android:hint="user name"
                android:padding="4dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_user_nam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorIcons"
                    android:drawableStart="@drawable/ic_user_login"
                    android:drawablePadding="10dp"
                    android:textColor="@color/colorMiscBackground"
                    android:textSize="14sp"
                    app:fontFamily="@font/ubuntu_regular" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_edit_text"
                android:hint="password"
                android:padding="4dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorIcons"
                    android:drawableStart="@drawable/ic_lock_login"
                    android:drawablePadding="10dp"
                    android:inputType="textPassword"
                    android:textColor="@color/colorMiscBackground"
                    android:textSize="14sp"
                    app:fontFamily="@font/ubuntu_regular" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Login"
                    android:textColor="@color/colorMiscBackground"
                    android:textSize="16sp"
                    app:fontFamily="@font/ubuntu_medium" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>